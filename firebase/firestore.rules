rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    function hasValidProductData() {
      let data = request.resource.data;
      return data.name is string && data.name.size() >= 3 && data.name.size() <= 100 &&
             data.slug is string && data.slug.size() >= 3 && data.slug.size() <= 100 &&
             data.description is string && data.description.size() >= 50 && data.description.size() <= 5000 &&
             data.shortDescription is string && data.shortDescription.size() >= 20 && data.shortDescription.size() <= 200 &&
             data.category is string &&
             data.tags is list && data.tags.size() >= 1 && data.tags.size() <= 10 &&
             data.status in ['draft', 'submitted', 'published', 'suspended'];
    }
    
    // Users collection
    match /users/{userId} {
      allow read: if true; // Public profiles
      allow create: if isOwner(userId) && 
                    request.resource.data.email is string &&
                    request.resource.data.username is string &&
                    request.resource.data.displayName is string &&
                    request.resource.data.role == 'user'; // New users must be 'user' role
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }
    
    // Products collection
    match /products/{productId} {
      allow read: if resource.data.status == 'published' || 
                  isOwner(resource.data.userId) || 
                  isAdmin();
      
      allow create: if isAuthenticated() && 
                    hasValidProductData() &&
                    request.resource.data.userId == request.auth.uid &&
                    request.resource.data.status in ['draft', 'submitted'] &&
                    request.resource.data.upvotes == 0 &&
                    request.resource.data.views == 0 &&
                    request.resource.data.featured == false;
      
      allow update: if (isOwner(resource.data.userId) && 
                       hasValidProductData() &&
                       request.resource.data.userId == resource.data.userId) || 
                       isAdmin();
      
      allow delete: if isOwner(resource.data.userId) || isAdmin();
    }
    
    // Page views collection (analytics)
    match /pageViews/{viewId} {
      allow read: if isAdmin();
      allow create: if true; // Anyone can track page views
      allow update, delete: if false; // No updates or deletes
    }
    
    // Visitor sessions collection (analytics)
    match /visitorSessions/{sessionId} {
      allow read: if isAdmin();
      allow create, update: if true; // Allow tracking
      allow delete: if false;
    }
    
    // Daily stats collection (analytics)
    match /dailyStats/{date} {
      allow read: if true; // Public stats
      allow create, update: if true; // Allow system to update
      allow delete: if isAdmin();
    }
    
    // Monthly stats collection (analytics)
    match /monthlyStats/{month} {
      allow read: if true; // Public stats
      allow create, update: if true; // Allow system to update
      allow delete: if isAdmin();
    }
    
    // Product analytics collection
    match /productAnalytics/{productId} {
      allow read: if isOwner(resource.data.userId) || isAdmin();
      allow create, update: if true; // Allow system to update
      allow delete: if isAdmin();
    }
    
    // Email logs collection (for tracking sent emails)
    match /emailLogs/{logId} {
      allow read: if isAdmin();
      allow create: if true; // System can log emails
      allow update, delete: if false;
    }
  }
}
